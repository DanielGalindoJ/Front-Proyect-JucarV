    <table class="table">
        <thead>
            <tr>
                <th>CategoryID</th>
                <th> Nombre</th>
                
                <th>Estado</th>
                <th>Creation del Registro</th>
                <th>Modificacion del registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categories in Model)
            {
                <tr>
                    <td>@categories.CategoryID</td>
                    <td>@categories.Name</td>
                    
                    <td>@categories.State</td>
                    <td>@categories.CreationDate</td>
                    <td>@categories.ModificationDate</td>
                    

                    <td>
                        <div role="group" class="w-60 btn-btn-group">
