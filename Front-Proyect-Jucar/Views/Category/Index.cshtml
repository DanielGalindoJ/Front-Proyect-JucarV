                            </a>&nbsp; *@

                            <a asp-controller="CategoryController" asp-action="Edit" asp-route-id="@categories.CategoryID" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>&nbsp;

                            <a asp-controller="CategoryController" asp-action="Delete" asp-route-id="@categories.CategoryID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </a>
                        </div>
                    </td>*
                    
                </tr>
            }
            
        </tbody>
       
       
    </table>
