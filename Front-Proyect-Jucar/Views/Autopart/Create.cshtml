@model Front_Proyect_Jucar.Models.Products.AutopartViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="py-4 py-xl-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2 style="font-family: Aclonica, sans-serif;">Autoparte</h2>
                <p></p>
            </div>
        </div>
    </div>
</section>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AutopartID" class="control-label"></label>
                <input asp-for="AutopartID" class="form-control" />
                <span asp-validation-for="AutopartID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightKgs" class="control-label"></label>
                <input asp-for="WeightKgs" class="form-control" />
                <span asp-validation-for="WeightKgs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeightCm" class="control-label"></label>
                <input asp-for="HeightCm" class="form-control" />
                <span asp-validation-for="HeightCm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LengthCm" class="control-label"></label>
                <input asp-for="LengthCm" class="form-control" />
                <span asp-validation-for="LengthCm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleZone" class="control-label"></label>
                <input asp-for="VehicleZone" class="form-control" />
                <span asp-validation-for="VehicleZone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="State" /> @Html.DisplayNameFor(model => model.State)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModificationDate" class="control-label"></label>
                <input asp-for="ModificationDate" class="form-control" />
                <span asp-validation-for="ModificationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="fs-4 border rounded border-3" style="background: var(--bs-gray-500);margin-left: 80px;padding-right: 0px;padding-bottom: 100px;margin-right: 80px;border-bottom-color: var(--bs-border-color);">
    <div class="container">
        <div class="row">
            <div class="col">
                <p style="color: var(--bs-emphasis-color);font-family: Acme, sans-serif;text-align: center;font-size: 27px;">AGREGAR NUEVO PRODUCTO</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
        </div>
    </div>
    <div class="row register-form">
        <div class="col-md-8 offset-md-2">
            <form class="custom-form">
                <h1> PRODUCTO</h1>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">CATEGORIA</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite la categoria del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">NOMBRES</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite el nombre del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">FUNCION</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite la medida del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">ZONA VEHICULO</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite el precio unitario del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">ESTADO</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 12px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite las existencias iniciales del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">PESO KG</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite el stock del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">ALTO CM</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite el stock del producto" /></div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field" style="font-family: Acme, sans-serif;font-size: 20px;">LARGO CM</label></div>
                    <div class="col-sm-6 input-column"><input class="d-md-flex justify-content-md-center align-items-md-center me-xxl-5 pe-xxl-0" type="text" style="transform: translate(36px) scale(1.32);width: 260px;margin-top: 0px;background: var(--bs-gray-200);border: 0.1px double var(--bs-secondary);font-size: 13px;padding-right: 0px;font-family: ABeeZee, sans-serif;" placeholder="Digite el stock del producto" /></div>
                </div>
                
               
               // <a href="productos.html"><img src="arrow-left-circle-fill.svg" width="66" height="82" /></a>

                <div class="form-group">
                    <input type="submit"  value="Create" class="btn btn-primary" />
                    <img src="download.svg" width="185" height="60" />
                </div>
            </form>
        </div>
    </div>
    <header></header>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
